{# templates/booking/delete.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Delete Booking{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Delete Booking</h1>
    <p>Are you sure you want to delete this booking?</p>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="{{ path('app_booking_delete', {'id': booking.id}) }}" method="post">
                {{ csrf_token('delete' ~ booking.id) }}
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="{{ path('app_booking') }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}