{# templates/booking/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Booking{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Edit Booking</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group mb-3">
                {{ form_label(form.customername, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.customername, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.startdate, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.startdate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.enddate, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.enddate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.rooms, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.rooms, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
