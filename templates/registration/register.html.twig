{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mt-5 bm-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Register</h1>

                        {# Add the form tag with method="post" #}
                        <form method="post" action="{{ path('app_register') }}">
                            <div class="mb-3">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(registrationForm.surname, {'attr': {'class': 'form-control', 'placeholder': 'Surname'}}) }}
                                </div>
                            </div>
                            <div class="mb-3">
                                {{ form_row(registrationForm.gender, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            {# <div class="mb-3">
                                {{ form_row(registrationForm.img, {'attr': {'class': 'form-control'}}) }}
                            </div> #}
                            <div class="mb-3 form-check">
                                {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
                                {# <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">Agree to terms</label> #}
                            </div>
                            {{ form_row(registrationForm._token) }}
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
