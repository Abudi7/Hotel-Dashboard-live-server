{# templates/security/edit_profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Edit Profile</h1>
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.surname, {'attr': {'class': 'form-control', 'placeholder': 'Lastname'}}) }}
                            </div>
                            <div class="mb-3">
                                <label for="userImage" class="form-label">Profile Image</label>
                                <div class="d-flex align-items-center">
                                    {% if user.img %}
                                        <img src="{{ asset('img/profile/' ~ user.img) }}" alt="Profile Image" class="rounded-circle" style="width: 50px; height: 50px;">
                                    {% endif %}                                   
                                {{ form_row(form.img, {'attr': {'class': 'form-control', 'id': 'userImage'}}) }}
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100">Save Changes</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
